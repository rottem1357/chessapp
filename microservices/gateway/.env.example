# microservices/gateway/.env.example
# Gateway Configuration
GATEWAY_PORT=8080
NODE_ENV=development

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Proxy Configuration
PROXY_TIMEOUT=30000
PROXY_RETRIES=3

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Service URLs (initially all point to existing monolith)
AUTH_SERVICE_URL=http://localhost:5000
PROFILES_SERVICE_URL=http://localhost:5000
RATINGS_SERVICE_URL=http://localhost:5000
MATCHMAKING_SERVICE_URL=http://localhost:5000
GAME_ORCHESTRATOR_URL=http://localhost:5000
AI_SERVICE_URL=http://localhost:5000
GAME_ARCHIVE_URL=http://localhost:5000
ADMIN_SERVICE_URL=http://localhost:5000