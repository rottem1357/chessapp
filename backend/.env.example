# Backend Environment Variables

# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost
FRONTEND_URL=http://localhost:3000

# Database Configuration (for future use)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=chessapp
DB_USER=postgres
DB_PASSWORD=1234
DB_SSL=false

# JWT Configuration (for future auth)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Socket.IO Configuration
SOCKET_CORS_ORIGIN=http://localhost:3000
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# Game Configuration
MAX_GAMES=1000
GAME_TIMEOUT=1800000
MOVE_TIMEOUT=300000
MAX_CHAT_MESSAGE_LENGTH=500
MAX_PLAYER_NAME_LENGTH=50

# AI Configuration
AI_MAX_CONCURRENT_GAMES=100
AI_DEFAULT_DIFFICULTY=intermediate
AI_MAX_THINKING_TIME=5000
AI_CLEANUP_INTERVAL=1800000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=app.log
LOG_MAX_FILE_SIZE=10m
LOG_MAX_FILES=5

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_SKIP_SUCCESSFUL=false

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_NAMESPACE=chessapp
MM_PROCESS_INTERVAL_MS=2000
MM_LOCK_TTL_MS=5000
MM_RATING_RANGE_DEFAULT=200
MM_PUBSUB_ENABLED=false

